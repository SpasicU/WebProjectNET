@model IEnumerable<Knjizara.Models.EFRepository.StavkaRacuna>

@{
    ViewBag.Title = "Index";
}

<h2>Stavke Računa</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form method="get" asp-action="Index">
    <p>
        <input type="search" placeholder="Upišite ID računa..." value="@ViewData["GetDetails"]" name="Search" style="width: 700px; height:35px;" />
        <input type="submit" value="Search" class="btn-primary" />
    </p>
</form>

@if (TempData["nema"] != null)
{<div class="alert alert-warning">
        <strong>Nema trazenog racuna!!</strong>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kolicina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.jedCena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Knjiga.autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Racun.IDRacuna)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kolicina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.jedCena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Knjiga.autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Racun.IDRacuna)
            </td>
            <td>
                @Html.ActionLink("Izbriši", "Delete", new { id = item.IDStavkaRacuna })
            </td>
        </tr>
    }

</table>
